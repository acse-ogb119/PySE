# include definitions of Diffpack Makefile variables:

# SWIG-specific make variables:
OBJS = ../DegMatSparse.o ../MapMatSparse.o ../DMS.o ../FastMatSparse.o ../isearch.o
#LDPATH = -L$(EXTSOFT)/lib/swig1.3 


SWIG       = swig
INTERFACE  = MatSparse.i
CXX        = g++-3.4 
CXXSHARED  = g++-3.4 -shared
#INCLUDES   = -I/usr/include/python2.4 -I..
INCLUDES = -I$(EXTSOFT)/include/python2.4 -I..
CFLAGS     = -g -c -fpic

# use the template makefile that was generated by SWIG:
# SWIG 1.3:
SWIGMAKEFILE = $(SWIGSRC)/Examples/Makefile

all:: python lib

python::
	swig -v -c++ -python $(INTERFACE)

lib::
	$(CXX) $(CFLAGS) MatSparse_wrap.cxx -o MatSparse_wrap.o  $(INCLUDES)
	$(CXXSHARED) MatSparse_wrap.o $(OBJS) -o _MatSparse.so
clean::
	rm -f *_wrap* *.so *.o $(OBJ_FILES)  *~

install::
	cp _*so MatSparse.py  ../../../lib/.
